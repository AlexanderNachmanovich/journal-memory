{
  "name": "journal-memory",
  "version": "1.0.0",
  "private": true,
  "main": "electron/main.js",
  "description": "Интерактивное приложение «Журнал памяти» для музея",
  "author": "Александр Нахманович <a.nachmanovich@gmail.com>",
  "scripts": {
    "dev": "vite",
    "dev:electron": "concurrently -k \"vite\" \"wait-on tcp:5173 && electron .\"",
    "dev:electron:simple": "concurrently \"vite\" \"sleep 3 && electron .\"",
    "build": "vite build",
    "pack": "electron-builder --dir",
    "dist": "electron-builder",
    "postinstall": "electron-builder install-app-deps"
  },
  "build": {
    "appId": "org.museum.journalmemory",
    "productName": "Журнал памяти",
    "asar": true,
    "directories": {
      "buildResources": "build"
    },
    "files": [
      "dist/**",
      "electron/**",
      "package.json"
    ],
    "mac": {
      "target": ["dmg"],
      "arch": ["universal"],
      "artifactName": "JournalMemory-${version}-mac-universal.${ext}"
    },
    "win": {
      "target": ["nsis"],
      "artifactName": "JournalMemory-${version}-Setup.${ext}"
    }
  },
  "dependencies": {
    "better-sqlite3": "^12.2.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "devDependencies": {
    "@vitejs/plugin-react": "4.2.1",
    "concurrently": "^8.2.2",
    "electron": "31.0.2",
    "electron-builder": "^24.13.3",
    "vite": "5.2.10",
    "wait-on": "^7.2.0"
  }
}
